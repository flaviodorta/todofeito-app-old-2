{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jasmine", "@types/jasmine", "supertest", "@types/supertest"]
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
